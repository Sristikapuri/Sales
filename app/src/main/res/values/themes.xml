<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BeautyHub" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/peach_500</item>
        <item name="colorPrimaryVariant">@color/peach_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/peach_300</item>
        <item name="colorSecondaryVariant">@color/peach_600</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/peach_700</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/peach_background</item>
        <item name="colorSurface">@color/peach_surface</item>
        <item name="colorOnSurface">@color/text_on_peach</item>
        
        <!-- Text colors -->
        <item name="android:textColor">@color/text_on_peach</item>
        <item name="android:textColorPrimary">@color/text_on_peach</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        
        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.BeautyHub.Button</item>
        
        <!-- Card style -->
        <item name="cardViewStyle">@style/Widget.BeautyHub.Card</item>
    </style>
    
    <!-- Button style -->
    <style name="Widget.BeautyHub.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/peach_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.BeautyHub.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/peach_surface</item>
    </style>
</resources>